{block content}
	<div class="row">
		<div class="post column small-12">
			<div class="post-header column small-3">
				<h1 class="no-margin">{$lesson->getRank()}.</h1>
				<p>hodina</p>

			</div>
			<div class="post-content column small-9">
				<p class="no-margin"><strong>{if $lesson->getName()}{$lesson->getName()}{else}{$lesson->getRank()}. hodina{/if}</strong>
				<hr class="white no-margin"/>
				</p>

				{if $lesson->getDescription()}
					<p>{$lesson->getDescription()}</p>
				{else}
					<p>Žádný popis hodiny</p>
				{/if}


				<div class="bottom">
				</div>
			</div>
		</div>
	</div>
	<hr class="white"/>

	{control posts}
{/block}