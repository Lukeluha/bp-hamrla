<ul class="unstyled no-margin">
	{snippet students}
	{foreach $class->getStudents() as $student}
		<li>
			<a href="{link loadStudent! $student->getId()}" data-reveal-id="studentDetail" class="myAjax">
				{$student->getName()} {$student->getSurname()}
			</a>
			<span class="right">
				{if $lesson}
					<a class="ajax success" href="{link addActivityPoint! $student->getId()}" title="PÅ™idat bod za aktivitu">
						+1
					</a>
				{/if}

				{if $lesson}
					<span class="grey">(tuto hodinu {$activityPoints[$student->getId()]})</span>
				{else}
					<span class="grey">(celkem aktivita {$activityPoints[$student->getId()]})</span>
				{/if}

				{if $lesson}
					<a class="ajax alert" href="{link removeActivityPoint! $student->getId()}" title="Odebrat bod za aktivitu">
						-1
					</a>
				{/if}
			</span>
		</li>
	{/foreach}
	{/snippet}
</ul>


<div id="studentDetail" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">

	{snippet studentDetail}
	{if isset($student)}
		{control studentDetail}
	{else}
		<h2 id="modalTitle">Detail studenta</h2>
		<img src="{$basePath}/images/spinner-bubble.svg" alt=""/>
	{/if}

	{/snippet}
	<a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>